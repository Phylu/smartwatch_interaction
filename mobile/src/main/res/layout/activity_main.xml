<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/action_button_notification" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/heading_standard_notification" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lmu_mensa"
        android:id="@+id/button_create_notification_standard_lmu_mensa"
        android:tag="standard:lmu_mensa"
        android:layout_below="@+id/heading_standard_notification"
        android:layout_alignParentStart="true"
        android:onClick="createNotification" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lmu_losteria"
        android:id="@+id/button_create_notification_standard_lmu_losteria"
        android:tag="standard:lmu_losteria"
        android:layout_below="@+id/button_create_notification_standard_lmu_mensa"
        android:layout_alignParentStart="true"
        android:onClick="createNotification" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lmu_tijuana"
        android:id="@+id/button_create_notification_standard_lmu_tijuana"
        android:tag="standard:lmu_tijuana"
        android:layout_below="@+id/button_create_notification_standard_lmu_losteria"
        android:layout_alignParentStart="true"
        android:onClick="createNotification" />

    <TextView android:text="@string/two_button_notification" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/button_create_notification_standard_lmu_tijuana"
        android:id="@+id/heading_two_button_notification" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lmu_mensa"
        android:id="@+id/button_create_notification_two_button_lmu_mensa"
        android:tag="two_button:lmu_mensa"
        android:layout_below="@+id/heading_two_button_notification"
        android:layout_alignParentStart="true"
        android:onClick="createNotification" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lmu_losteria"
        android:id="@+id/button_create_notification_two_button_lmu_losteria"
        android:tag="two_button:lmu_losteria"
        android:layout_below="@+id/button_create_notification_two_button_lmu_mensa"
        android:layout_alignParentStart="true"
        android:onClick="createNotification" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lmu_tijuana"
        android:id="@+id/button_create_notification_two_button_lmu_tijuana"
        android:tag="two_button:lmu_tijuana"
        android:layout_below="@+id/button_create_notification_two_button_lmu_losteria"
        android:layout_alignParentStart="true"
        android:onClick="createNotification" />

    <TextView android:text="@string/swipe_notification" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/button_create_notification_two_button_lmu_tijuana"
        android:id="@+id/heading_swipe_notification" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lmu_mensa"
        android:id="@+id/button_create_notification_swipe_lmu_mensa"
        android:tag="swipe:lmu_mensa"
        android:layout_below="@+id/heading_swipe_notification"
        android:layout_alignParentStart="true"
        android:onClick="createNotification" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lmu_losteria"
        android:id="@+id/button_create_notification_swipe_lmu_losteria"
        android:tag="swipe:lmu_losteria"
        android:layout_below="@+id/button_create_notification_swipe_lmu_mensa"
        android:layout_alignParentStart="true"
        android:onClick="createNotification" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lmu_tijuana"
        android:id="@+id/button_create_notification_swipe_lmu_tijuana"
        android:tag="swipe:lmu_tijuana"
        android:layout_below="@+id/button_create_notification_swipe_lmu_losteria"
        android:layout_alignParentStart="true"
        android:onClick="createNotification" />

</RelativeLayout>
