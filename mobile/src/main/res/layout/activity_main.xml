<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/standard_notification" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/heading_standard_notification" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lmu_mensa"
        android:id="@+id/button_create_notification_standard_tum_mensa"
        android:tag="standard:lmu_mensa"
        android:layout_below="@+id/heading_standard_notification"
        android:layout_alignParentStart="true"
        android:onClick="createNotification" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tum_cafeteria"
        android:id="@+id/button_create_notification_standard_tum_cafeteria"
        android:tag="standard:tum_cafeteria"
        android:layout_below="@+id/button_create_notification_standard_tum_mensa"
        android:layout_alignParentStart="true"
        android:onClick="createNotification" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tum_doener"
        android:id="@+id/button_create_notification_standard_tum_doener"
        android:tag="standard:tum_doener"
        android:layout_below="@+id/button_create_notification_standard_tum_cafeteria"
        android:layout_alignParentStart="true"
        android:onClick="createNotification" />

</RelativeLayout>
